<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simpledemo.dao.UserDao">

    <select id="findUser" resultType="User" parameterType="long">
        select id,name,account,password,salt,gender,avatar,phone,email,status,enabled,isactive,create_user,create_time,modify_user,modify_time
        from sys_admin_user
        where id=#{userId}
    </select>

</mapper>